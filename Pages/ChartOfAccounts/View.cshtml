@page
@model MiniAccountManagementSystem.Pages.ChartOfAccounts.View
@{
    ViewData["Title"] = "View";
}

<h1>@ViewData["Title"]</h1>

<h2>Account Details</h2>

<table class="table">
    <tr><th>ID</th><td>@Model.Account.Id</td></tr>
    <tr><th>Name</th><td>@Model.Account.Name</td></tr>
    <tr><th>Balance</th><td>@Model.Account.Balance.ToString("C")</td></tr>
    <tr><th>Parent ID</th><td>@Model.Account.ParentAccountId?.ToString() ?? "None"</td></tr>
</table>

<a asp-page="Index" class="btn btn-secondary">Back</a>
<a asp-page="Edit" asp-route-id="@Model.Account.Id" class="btn btn-primary">Edit</a>
<a asp-page="Delete" asp-route-id="@Model.Account.Id" class="btn btn-danger">Delete</a>