@page
@model MiniAccountManagementSystem.Pages.ManageUsers.Edit
@{
    ViewData["Title"] = "Edit";
}

<h1>@ViewData["Title"]</h1>

<h2>Edit User</h2>

<form method="post">
    <input type="hidden" asp-for="UserToEdit.Id" />
    <div class="form-group">
        <label asp-for="UserToEdit.UserName"></label>
        <input asp-for="UserToEdit.UserName" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="UserToEdit.Email"></label>
        <input asp-for="UserToEdit.Email" class="form-control" />
    </div>
    <div class="form-group">
        <label for="roleSelect">Role</label>
        <select asp-for="SelectedRole" class="form-control" asp-items="new SelectList(Model.AllRoles)">
            <option value="">-- Select Role --</option>
        </select>
    </div>
    <button type="submit" class="btn btn-primary">Save</button>
    <a asp-page="/ChartOfAccounts/Index" class="btn btn-secondary">Cancel</a>
</form>